    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            once: true
        });
        
        // Countdown Timer
        const countDownDate = new Date();
        countDownDate.setHours(countDownDate.getHours() + 24);
        
        const x = setInterval(function() {
            const now = new Date().getTime();
            const distance = countDownDate - now;
            
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById("countdown-hours").innerHTML = hours.toString().padStart(2, '0');
            document.getElementById("countdown-minutes").innerHTML = minutes.toString().padStart(2, '0');
            document.getElementById("countdown-seconds").innerHTML = seconds.toString().padStart(2, '0');
            
            if (distance < 0) {
                clearInterval(x);
                document.getElementById("countdown").innerHTML = "<div class='text-center w-full py-4'><span class='text-yellow-700 font-bold'>L'offre a expir√© !</span></div>";
            }
        }, 1000);
        
        // Place order function
        function placeOrder() {
            // Get selected options
            const hosting = document.getElementById('hosting').checked;
            const logo = document.getElementById('logo').checked;
            const marketing = document.getElementById('marketing').checked;
            const seo = document.getElementById('seo').checked;
            const colors = document.getElementById('colors').checked;
            const total = document.getElementById('total-amount').textContent;
            
            // Build message
            let message = "* NOUVELLE COMMANDE JESOSY DATING*%0A%0A";
            message += "* Forfait s√©lectionn√© :*%0A";
            
            // Get selected pack
            const selectedPack = document.querySelector('input[name="pack"]:checked');
            if (selectedPack) {
                const packName = selectedPack.id.replace('-pack', '');
                let packPrice = '';
                
                switch(packName) {
                    case 'starter':
                        packPrice = '30 000 FCFA';
                        break;
                    case 'pro':
                        packPrice = '75 000 FCFA';
                        break;
                    case 'premium':
                        packPrice = '100 000 FCFA';
                        break;
                }
                
                message += `‚Ä¢ Pack ${packName.charAt(0).toUpperCase() + packName.slice(1)} (${packPrice})%0A%0A`;
            }
            
            // Add selected options
            let hasOptions = hosting || logo || marketing || seo || colors;
            if (hasOptions) {
                message += "* Options ajout√©es :*%0A";
                if (hosting) message += "‚Ä¢ H√©bergement Premium 1 an (25 000 FCFA)%0A";
                if (logo) message += "‚Ä¢ Cr√©ation de logo personnalis√© (15 000 FCFA)%0A";
                if (marketing) message += "‚Ä¢ Strat√©gie marketing personnalis√©e (30 000 FCFA)%0A";
                if (seo) message += "‚Ä¢ R√©f√©rencement SEO (25 000 FCFA)%0A";
                if (colors) message += "‚Ä¢ Personnalisation avanc√©e des couleurs (15 000 FCFA)%0A";
                message += "%0A";
            }
            
            // Add total
            message += `*Montant total : ${total}*%0A%0A`;
            
            // Add call to action
            message += "Merci pour votre confiance ! Un conseiller vous contactera dans les plus brefs d√©lais pour finaliser votre commande. ";
            
            // Open WhatsApp with pre-filled message
            window.open(`https://wa.me/2250767512449?text=${message}`, '_blank');
            
            // Reset form
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
            });
            updateTotal();
        }
        document.getElementById('expiry').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });
        
        // Update total price based on selected options
        function updateTotal() {
            let total = 75000; // Base price
            const options = {
                hosting: document.getElementById('hosting').checked ? 25000 : 0,
                logo: document.getElementById('logo').checked ? 15000 : 0,
                marketing: document.getElementById('marketing').checked ? 30000 : 0,
                seo: document.getElementById('seo').checked ? 25000 : 0,
                colors: document.getElementById('colors').checked ? 15000 : 0
            };
            
            // Add selected options to total
            total += options.hosting + options.logo + options.marketing + options.seo + options.colors;
            
            // Update total display with thousand separator
            document.getElementById('total-amount').textContent = total.toLocaleString('fr-FR') + ' FCFA';
            
            // Update total in button
            document.getElementById('total-button').textContent = total.toLocaleString('fr-FR') + ' FCFA';
        }
    </script>

